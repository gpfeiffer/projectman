          <%= f.text_field :first %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :last, "Last Name" %>
	</td>
	<td>
	  <%= f.text_field :last %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :registration %>
	</td>
	<td>
	  <%= f.text_field :registration %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :programme %>
	</td>
	<td>
	  <%= f.select :programme, PROGRAMMES, :include_blank => true %>
	</td>
      </tr>
      <tr>
	<td>
	  <%= f.label :email %>
	</td>
	<td>
	  <%= f.text_field :email %>
	</td>
      </tr>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
